# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

[*.{json,jsonc}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{wgsl,glsl,vert,frag}]
# シェーダーファイル用の設定
indent_size = 4

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[package.json]
indent_size = 2

[*.sh]
end_of_line = lf